<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance"/>


    <style name="AppTheme.TextAppearance.Feed" parent="TextAppearance.MaterialComponents.Body1"/>

    <style name="AppTheme.TextAppearance.Feed.Save" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="AppTheme.TextAppearance.Feed.Take" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="AppTheme.Widget"/>

    <style name="AppTheme.Widget.TextView"/>

    <style name="AppTheme.Widget.TextView.Error">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
